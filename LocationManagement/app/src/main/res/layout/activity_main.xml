<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#0099cc"
                android:screenOrientation="portrait"
                tools:context=".MainActivity">
    
    <TextView android:id="@+id/positionLogger" android:text="@string/position_logger"
              android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="70dp"/>

    <Button android:id="@+id/startService" android:text="@string/start_service"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="startService" android:layout_below="@id/positionLogger"/>

    <Button android:id="@+id/stopService" android:text="@string/stop_service"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:onClick="stopService" android:layout_below="@id/startService"/>



</RelativeLayout>
